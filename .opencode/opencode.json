{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "http://localhost:8080/sse"
    },
    "tavily": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "--network", "mcp-universal-network", "-e", "TAVILY_API_KEY=tvly-dev-...", "mcp/tavily"]
    },
    "memory": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "--network", "mcp-universal-network", "-v", "mcp-memory-data:/data", "mcp/memory"]
    },
    "fetch": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "--network", "mcp-universal-network", "mcp/fetch"]
    },
    "filesystem": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "--network", "mcp-universal-network", "-v", "C:/Projetos:/workspace", "mcp/filesystem", "/workspace"]
    },
    "playwright": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "--network", "mcp-universal-network", "mcp/playwright"]
    }
  },
  "agent": {
    "devsan": {
      "file": "agent/devsan.md"
    },
    "devsab": {
      "file": "agent/devsab.md"
    }
  },
  "$comment": "MCPs configurados globalmente para OpenCode - Context7 ativo, STDIO sob demanda"
}
